@page
@model GrupoESINuevo.IndexQuotationModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index Cotizaciones</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailsLocal[0].Order.Concepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailsLocal[0].Service.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailsLocal[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailsLocal[0].Quotation.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailsLocal[0].Status)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetailsLocal) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Order.Concepto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quotation.Description)
            </td>
            <td>
                @if (item.Status == 2)
                {
                    <p>Asignado</p>
                }
                @if (@item.Status == 1)
                {
                    <p>Rechazado</p>
                }
                @if (@item.Status == 0)
                {
                    <p>Espera</p>
                }
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./CreateQuotation" asp-route-orderDetailsId="@item.Id">Ver cotizacion</a> |

                <a class="btn btn-danger" asp-page="./DeleteQuotation" asp-route-orderDetailsId="@item.Id">Borrar cotizacion</a>
            </td>
        </tr>
}
    </tbody>
</table>
