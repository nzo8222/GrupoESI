@page
@model GrupoESINuevo.CreateQuotationModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="border container rounded p-2">
    <h3 class="text-info pb-2">Lista de materiales</h3>
    @if (Model._QuotationTaskMaterialVM.lstMaterial.Count == 0)
    {
        <p>
            No se a agregado un material
        </p>
    }
    else
    {
        <div class="row mt-3">
            <div class="col-7">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => Model._QuotationTaskMaterialVM.lstMaterial.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model._QuotationTaskMaterialVM.lstMaterial.FirstOrDefault().Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model._QuotationTaskMaterialVM.lstMaterial.FirstOrDefault().Description)
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model._QuotationTaskMaterialVM.lstMaterial)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            <td>
                                <button type="submit" asp-page-handler="RemoveFromCart" asp-route-materialId="@item.Id" class="btn btn-danger form-control">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }


                </table>
            </div>
        </div>
    }
</div>
<h4>Quotation</h4>
<hr />lstTaskModel
@if (Model._QuotationTaskMaterialVM.lstTaskModel.Count > 0)
{

    <div class="row mt-3">
        <div class="col-7">
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => Model._QuotationTaskMaterialVM.lstTaskModel.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => Model._QuotationTaskMaterialVM.lstTaskModel.FirstOrDefault().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => Model._QuotationTaskMaterialVM.lstTaskModel.FirstOrDefault().Cost)
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model._QuotationTaskMaterialVM.lstTaskModel)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Cost)
                        </td>
                        <td>
                            <button type="submit" asp-page-handler="DeleteTaskModel" asp-route-materialId="@item.Id" class="btn btn-danger form-control">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }


            </table>
        </div>
    </div>
}
@if (Model._QuotationTaskMaterialVM.lstMaterial.Count > 0)
{
    <div class="card-body">
        <form method="post" style="100%">
            <div class="container">
                <div class="border rounded p-2">
                    <div class="row">
                        <div class="col-6">
                            <h4 class="text-info pl-3 pt-2 pb-1">Agregar Material</h4>
                            <input hidden asp-for="_QuotationTaskMaterialVM.lstMaterial" />
                            @*<input hidden asp-for="_OrderAndOrderDetailsVM.OrderDetailsModel.Order" />*@
                            <div class="form-group">
                                <label asp-for="_QuotationTaskMaterialVM.MaterialModel.Name" class="control-label"></label>
                                <input asp-for="_QuotationTaskMaterialVM.MaterialModel.Name" class="form-control" />
                                <span asp-validation-for="_QuotationTaskMaterialVM.MaterialModel.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="_QuotationTaskMaterialVM.MaterialModel.Description" class="control-label"></label>
                                <input asp-for="_QuotationTaskMaterialVM.MaterialModel.Description" class="form-control" />
                                <span asp-validation-for="_QuotationTaskMaterialVM.MaterialModel.Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="_QuotationTaskMaterialVM.MaterialModel.Price" class="control-label"></label>
                                <input asp-for="_QuotationTaskMaterialVM.MaterialModel.Price" class="form-control" />
                                <span asp-validation-for="_QuotationTaskMaterialVM.MaterialModel.Price" class="text-danger"></span>
                            </div>
                            <button type="submit" asp-page-handler="AddMaterial" class="form-control btn btn-primary">
                                Agregar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
}

